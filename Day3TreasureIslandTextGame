# Question 1
print("You're at a cross road. Where do you want to go? Type 'left' or 'right'")
direction = input()

if direction == "left":
  print("you go left.\nA stream appears.\nWould you like to Swim or Wait?")
  direction =input()
  if direction == "Wait":
    print("You are sucked into a void and three doors appear.\n A Red Door, A Blue Door, and a Yellow Door.\n Which one do you choose?")
    direction = input()
    if direction == "Blue":
      print("Eaten by beasts")
    elif direction == "Yellow":
      print("You win!")
    elif direction == "Red":
      print("Burned by fire, Game Over")
    else:
      print("Game over")
  else:
    print("You are attacked by trout. Game Over")
else:
  print("Fall into a hole. Game Over")
